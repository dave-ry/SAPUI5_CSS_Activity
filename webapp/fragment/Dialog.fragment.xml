<core:FragmentDefinition xmlns="sap.m"
xmlns:core="sap.ui.core">

<Dialog id="idMsgDialog" >

    <customHeader>
        <Bar id="barDialogHdr">
            <contentLeft>
                <Text id="txtDialogHdr" text="{i18n>dialogTitle}" class="customDialogHdrTxt">
                </Text>
            </contentLeft>
        </Bar>
    </customHeader>

    <!-- Display message -->
    <Text id="idMsgTxt" text="{i18n>btnClickMsg}"></Text>

    <beginButton>   
        <Button id="idBtnMsgDialog" text="{i18n>dialogCloseButtonText}" type="Emphasized" press="onPressCloseDialog"/>
    </beginButton>

</Dialog>

</core:FragmentDefinition>